<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wallpaper"
    tools:context=".caretaker.CaretakerLoginPage">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Event"
                android:id="@+id/loginText"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <EditText
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Event Name"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="4dp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/organization_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Organization name"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="4dp"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/event_description"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="4dp"
                android:hint="Event Descriptiom"
                android:padding="8dp"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/event_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Mobile"
                android:inputType="phone"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Location"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="48dp"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>
            <DatePicker
                android:id="@+id/datepicker"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                />
            <CheckBox
                android:id="@+id/checkbox_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include Image"
                android:gravity="center_horizontal"
                android:onClick="onCheckboxClicked"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/categoriesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Select Categories"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/uploadImageBtn"
                android:text="Upload Image"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "10dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/eventRegisterBtn"
                android:text="Register"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>


        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            />
        <!-- text view to display selected items-->
        <TextView
            android:id="@+id/categoriesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Select Categories"/>
        <CheckBox
            android:id="@+id/checkbox_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Image"
            android:gravity="center_horizontal"
            android:onClick="onCheckboxClicked"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/uploadImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eventRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:text="Register"
            />
    </LinearLayout>
</ScrollView>
